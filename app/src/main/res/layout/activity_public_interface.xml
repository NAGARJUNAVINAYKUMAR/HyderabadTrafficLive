<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PublicInterfaceActivity">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_home" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_interface_bg_lyt_height"
        android:layout_below="@id/toolbar_main"
        android:background="@drawable/content_background"
        android:orientation="vertical"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/public_interface_card_view_margin_left"
                android:layout_marginLeft="@dimen/public_interface_card_view_margin_left"
                android:layout_marginTop="@dimen/public_interface_card_view_margin_top"
                android:layout_marginEnd="@dimen/public_interface_card_view_margin_right"
                android:layout_marginRight="@dimen/public_interface_card_view_margin_right"
                android:layout_marginBottom="@dimen/public_interface_card_view_margin_bottom"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/cardview_light_background"
                card_view:cardCornerRadius="@dimen/public_interface_card_view_corners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_app_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/public_interface_caps"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="@dimen/dashboard_htp_header_text_size"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinner_category"
                            style="@style/spinner_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/et_when_why_whom_and_how"
                            style="@style/edit_text_style_drawable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="@string/when_why_whom_and_how"
                            android:inputType="text"
                            android:maxLines="1"
                            tools:ignore="Autofill" />

                        <EditText
                            android:id="@+id/et_phone_no"
                            style="@style/edit_text_style_drawable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="@string/phone_no"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            tools:ignore="Autofill" />

                        <EditText
                            android:id="@+id/et_reason"
                            style="@style/edit_text_style_drawable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="@string/reason"
                            android:inputType="text"
                            android:maxLength="10"
                            android:maxLines="1"
                            tools:ignore="Autofill" />

                        <EditText
                            android:id="@+id/et_location"
                            style="@style/edit_text_style_drawable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:hint="@string/type_location"
                            android:inputType="text"
                            android:maxLines="1"
                            tools:ignore="Autofill" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/iv_display"
                            android:layout_width="192dp"
                            android:layout_height="192dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="24dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_gallery2"
                            android:visibility="gone" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rel_gallery_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/header_background"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <RelativeLayout
                                android:id="@+id/rel_camera"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5">

                                <ImageView
                                    android:id="@+id/iv_camera"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:contentDescription="@null"
                                    android:paddingStart="@dimen/dashboard_img_padding_left"
                                    android:paddingLeft="@dimen/dashboard_img_padding_left"
                                    android:paddingTop="@dimen/dashboard_img_padding_top"
                                    android:paddingEnd="@dimen/dashboard_img_padding_right"
                                    android:paddingRight="@dimen/dashboard_img_padding_right"
                                    android:paddingBottom="@dimen/dashboard_img_padding_bottom"
                                    android:src="@drawable/ic_camera_3x" />

                                <TextView
                                    android:id="@+id/tv_camera"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/iv_camera"
                                    android:gravity="center_horizontal"
                                    android:paddingStart="@dimen/dashboard_img_text_padding_left"
                                    android:paddingLeft="@dimen/dashboard_img_text_padding_left"
                                    android:paddingEnd="@dimen/dashboard_img_text_padding_right"
                                    android:paddingRight="@dimen/dashboard_img_text_padding_right"
                                    android:paddingBottom="8dp"
                                    android:text="@string/camera"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/dashboard_img_text_size" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rel_gallery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5">

                                <ImageView
                                    android:id="@+id/iv_gallery"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:contentDescription="@null"
                                    android:paddingStart="@dimen/dashboard_img_padding_left"
                                    android:paddingLeft="@dimen/dashboard_img_padding_left"
                                    android:paddingTop="@dimen/dashboard_img_padding_top"
                                    android:paddingEnd="@dimen/dashboard_img_padding_right"
                                    android:paddingRight="@dimen/dashboard_img_padding_right"
                                    android:paddingBottom="@dimen/dashboard_img_padding_bottom"
                                    android:src="@drawable/ic_gallery_3x" />

                                <TextView
                                    android:id="@+id/tv_gallery"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/iv_gallery"
                                    android:gravity="center_horizontal"
                                    android:paddingStart="@dimen/dashboard_img_text_padding_left"
                                    android:paddingLeft="@dimen/dashboard_img_text_padding_left"
                                    android:paddingEnd="@dimen/dashboard_img_text_padding_right"
                                    android:paddingRight="@dimen/dashboard_img_text_padding_right"
                                    android:paddingBottom="8dp"
                                    android:text="@string/gallery"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/dashboard_img_text_size" />

                            </RelativeLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_arrow_next"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_next_arrow" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_already_have_an_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_horizontal"
                        android:textSize="14sp"
                        android:text="@string/false_report_to_police_is_a_punishable_offence"
                        android:textColor="@color/colorRed" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>